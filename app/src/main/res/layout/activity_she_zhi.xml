<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.SheZhiActivity">
    <include layout="@layout/title_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_30"
            android:background="@drawable/bg_blue"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setup_clear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:text="清除缓存"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/dp_15"
                    android:text="10M"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/setup_rela"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/setup_clear">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_15"
                    android:text="版本更新"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/sp_20" />

                <ImageView
                    android:id="@+id/gengxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_15"
                    android:src="@mipmap/ape" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/bg_blue">

            <TextView
                android:id="@+id/setup_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="@dimen/dp_15"
                android:text="重置密码"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_20" />

            <ImageView
                android:id="@+id/xiugai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp_15"
                android:src="@mipmap/ape" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="@drawable/bg_blue"
            android:gravity="center">

            <TextView
                android:id="@+id/tuichu_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_20"
                android:text="退出登录"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/sp_20" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>