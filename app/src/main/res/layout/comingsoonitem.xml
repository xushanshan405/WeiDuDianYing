<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:layout_marginTop="20dp"
    android:id="@+id/recy2_rela"
    android:layout_gravity="center_horizontal"
    android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="312dp"
        android:layout_height="98dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/yuanc">
        <TextView
            android:id="@+id/recy2_text1"
            android:text="555"
            android:textColor="#ddd"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/recy2_text2"
            android:text="555"
            android:textColor="#ddd"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/recy2_text3"
            android:text="555"
            android:textColor="#ddd"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/recy2_but"
            android:layout_width="50dp"
            android:text="预约"
            android:textColor="#ffffff"
            android:background="@drawable/but"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@id/recy2_text3"
            android:layout_height="30dp" />

    </RelativeLayout>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/recy2_image"
        android:layout_width="88dp"
        android:layout_height="108dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp" />
</RelativeLayout>