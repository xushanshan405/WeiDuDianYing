<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#141931"
    android:layout_height="match_parent"
    tools:context=".view.GouPiaoActivity">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/goupiao_yugao"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        
    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:id="@+id/goupiao_name"
            android:layout_marginLeft="24dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="40dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginLeft="24dp"
            android:text="时长"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="40dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginLeft="127dp"
            android:text="评分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="40dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginLeft="216dp"
            android:text="导演"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="63dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginLeft="216dp"
            android:text="导演"
            android:id="@+id/goupiao_daoyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="63dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginLeft="127dp"
            android:text="导演"
            android:id="@+id/goupiao_pingfen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="63dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_marginLeft="24dp"
            android:text="导演"
            android:id="@+id/goupiao_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="#1c2243"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <RelativeLayout
            android:id="@+id/goupaio_dq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="海淀区"
                android:id="@+id/goupiao_dq_name"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="12dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@mipmap/arrow_drop_down"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="14dp"
                android:layout_width="16dp"
                android:id="@+id/image_dq"
                android:layout_height="16dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="141.7dp"
            android:id="@+id/goupiao_recytime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="05-14"
                android:textSize="14sp"
                android:id="@+id/goupiao_tite_time"

                android:layout_marginTop="12dp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@mipmap/arrow_drop_down"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="14dp"
                android:layout_width="16dp"
                android:id="@+id/image_time"
                android:layout_height="16dp" />
        </RelativeLayout>

        <TextView
            android:text="价格最低"
            android:id="@+id/goupaio_zuidi"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="250.5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="@mipmap/icon_search"
            android:layout_width="17.5dp"
            android:layout_marginLeft="315dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24dp"
            android:layout_marginTop="12dp"
            android:layout_height="17.5dp" />



    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="32dp"
        android:id="@+id/goupiao_recy_yy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>


</RelativeLayout>