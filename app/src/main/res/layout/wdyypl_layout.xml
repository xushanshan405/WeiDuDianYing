<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="#1c2243"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_200">
        <LinearLayout
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_90">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/wdyypl_img"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_height="@dimen/dp_101">
                <TextView
                    android:id="@+id/wdyypl_name"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#fff"
                    android:text="悲伤逆流成河"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/wdyypl_dizhi"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昌平区立汤路186号龙德广场5层"
                    />
                <TextView
                    android:id="@+id/wdyypl_juli"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.2km"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="________________________________________"
                android:gravity="center"
            android:textColor="#141931"
            />
        <TextView
            android:text="我的评论"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/wdyypl_pinglun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="12sp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/wdyypl_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="04－24  09:15"
                android:layout_marginLeft="@dimen/dp_180"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
