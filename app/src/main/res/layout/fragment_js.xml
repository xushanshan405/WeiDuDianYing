<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#141931"
    tools:context=".fragment.xqfragment.JsFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_marginLeft="24dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <TextView
                   android:text="剧集简介"
                   android:layout_marginTop="30dp"
                   android:textSize="14sp"
                   android:textColor="#fff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/js_jian"
                   android:layout_marginTop="60dp"
                   android:textSize="12sp"
                   android:textColor="#fff"
                   android:layout_width="312dp"
                   android:maxLines="4"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginTop="134dp"
                   android:text="演职人员"
                   android:textSize="14sp"
                   android:textColor="#fff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:layout_marginTop="164dp"
                    android:id="@+id/js_daoyan"
                   android:text="演职人员"
                   android:textSize="12sp"
                   android:textColor="#fff"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/js_recydy"
                   android:layout_marginTop="191dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </androidx.recyclerview.widget.RecyclerView>
               <TextView
                   android:layout_marginTop="342dp"
                   android:text="演员"
                   android:id="@+id/js_yanyuan"
                android:textColor="#fff"
                   android:textSize="14sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/js_recyyy"
                   android:layout_marginTop="369dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

               </androidx.recyclerview.widget.RecyclerView>
           </RelativeLayout>
       </LinearLayout>
   </ScrollView>

</LinearLayout>