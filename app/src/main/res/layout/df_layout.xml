<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:id="@+id/df_rela"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:background="@drawable/yuanc">
        <TextView
            android:id="@+id/df_text1"
            android:text="555"
            android:textColor="#ddd"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/df_text2"
            android:textSize="12sp"
            android:textColor="#ddd"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/df_text3"
            android:textSize="12sp"
            android:textColor="#ddd"
            android:layout_marginTop="67dp"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/df_text4"
            android:textSize="12sp"
            android:textColor="#ddd"
            android:layout_marginTop="94dp"
            android:layout_marginLeft="130dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/df_but"
            android:layout_width="wrap_content"
            android:text="立即付款"
            android:background="@color/colorAccent"
            android:paddingLeft="@dimen/dp_0_5"
            android:paddingBottom="@dimen/dp_0_5"
            android:paddingTop="@dimen/dp_0_5"
            android:paddingRight="@dimen/dp_0_5"
            android:textColor="#ffffff"
            android:layout_marginTop="94dp"
            android:layout_marginLeft="250dp"
            android:layout_height="30dp" />

    </RelativeLayout>


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/df_image"
        android:layout_width="88dp"
        android:layout_height="108dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />
</RelativeLayout>