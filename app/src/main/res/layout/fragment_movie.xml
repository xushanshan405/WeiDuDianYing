<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#141931"
    android:layout_height="match_parent"
    >
    <include layout="@layout/meiyou_layout"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="26dp"
            android:id="@+id/diangying_dingwei"
            android:background="@mipmap/icon_location"
            android:layout_width="20dp"
            android:layout_marginTop="38dp"
            android:layout_height="24dp" />
        <TextView
            android:text="北京"
            android:id="@+id/dianying_weizhi"
            android:textSize="14sp"
            android:layout_marginTop="43dp"
            android:layout_marginLeft="58dp"
            android:textColor="#fff"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="315dp"
            android:layout_marginTop="41dp"
            android:id="@+id/main_sou"
            android:background="@mipmap/icon_search"
            android:layout_width="18dp"
            android:layout_height="18dp" />
    </RelativeLayout>

        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/dianying_shua"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView

                android:id="@+id/dianying_recy"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
        </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</RelativeLayout>