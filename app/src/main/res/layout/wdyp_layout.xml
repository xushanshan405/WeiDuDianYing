<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="312dp"
    android:id="@+id/chayuyue_rela"
    android:gravity="center"
    android:layout_marginTop="@dimen/dp_30"
    android:background="@mipmap/beijing"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/sp_16"
        android:text="我的电影票" />

    <TextView
        android:id="@+id/ticket_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="18dp"
        android:layout_marginTop="@dimen/sp_16"
        android:text="电影名" />

    <TextView
        android:gravity="center"
        android:id="@+id/ticket_seat"
        android:layout_width="@dimen/dp_62"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginTop="@dimen/dp_104"
        android:text="座号"
        android:textColor="#fff"
        android:textSize="@dimen/dp_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ticket_cinema"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_49"
        android:text="影院"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ticket_yt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_72"
        android:text="影厅"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ticket_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_96"
        android:text="时间"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ticket_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_96"
        android:layout_marginTop="@dimen/dp_119"
        android:text="播放时间时间"
        android:textColor="#fff"
        android:textSize="@dimen/sp_12"
        android:textStyle="bold" />

    <Button
        android:id="@+id/ticket_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_28"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_marginTop="@dimen/dp_110"
        android:background="#e8185e"
        android:text="查看取票码"
        android:textColor="#fff" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/chayuyue_image"
        android:layout_width="@dimen/dp_41"
        android:layout_height="@dimen/dp_37"
        android:background="@mipmap/group"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="@dimen/dp_31" />
</RelativeLayout>